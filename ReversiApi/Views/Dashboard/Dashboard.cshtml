@model ReversiApi.Models.Game
@{
    Layout = "_Layout";
    var games = (List<ReversiApi.Models.Game>) ViewData["games"];
}
@{
    ViewData["Title"] = "Dashboard";
}
<div class="row">
    <div class="col-md-auto">
        <div class="card" style="width: 18rem;">
            <div class="card-header">
                Mijn games
            </div>
            <ul class="list-group list-group-flush">
                @if  (Model != null) {
                    <li class="list-group-item"><a href="/#access_token=@Model.GameToken&">@Model.Description</a></li>
                }
            </ul>
        </div>
    </div>
    <div class="col-md-auto">
        <div class="card" style="width: 18rem;">
            <div class="card-header">
                Beschikbare games
            </div>
            <ul class="list-group list-group-flush">
                @foreach (var game in @games) {
                    <li class="list-group-item"><a href="/game/join/@game.GameToken">@game.Description</a></li>
                }
            </ul>
        </div>
    </div>
</div>
